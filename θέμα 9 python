#θεμα 9 python
import numpy as np
import pandas as pd
import random as rnd
import os
from google.colab import files
def generateRandomData(nRow, nColumns, normalMean, normalStdev):
  data = np.random.normal(normalMean, normalStdev, (nRow,nColumns ))
  return data

nRow = int(input("Δωσε τον αριθμό των γραμμών: "))
nColumns = int(input("Δωσε τον αριθμό των στηλων: "))
normalMean = float(input("Δώσε την μέση τιμή της κανονικής κατανομής: "))
normalStdev = float(input("Δωσε την διασπορά της κανονικής κατανομής: "))
data = generateRandomData(nRow, nColumns, normalMean, normalStdev)
data=pd.DataFrame(data)
print(data)
data.to_csv("1000X42.csv",index=False)
files.download("1000X42.csv")
